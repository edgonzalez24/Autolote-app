<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dapm_scrolling">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.EditActivity"></activity>
        <activity android:name=".presentation.SearchActivity" />
        <activity android:name=".presentation.CustomersListActivity" />
        <activity android:name=".presentation.NewActivity" />
        <activity android:name=".presentation.HelpActivity" />
        <activity android:name=".presentation.AboutActivity" />
        <activity
            android:name=".presentation.ScrollingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>