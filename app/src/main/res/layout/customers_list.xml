<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/formnew_marca"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txvModelo"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:text="@string/formnew_modelo"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txvColor"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:text="@string/formnew_color"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txvAnio"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:text="@string/formnew_anio"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txvTipo"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:text="@string/formnew_tipo"
                android:textSize="15dp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imgRight"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_gravity="center|right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/description_ic_customer"
            app:srcCompat="@drawable/ic_right"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary" />


</LinearLayout>
